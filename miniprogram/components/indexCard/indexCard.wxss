/* components/indexCard.wxss */

.card-wrapper {
  border-bottom: 1px solid #eee;
  padding: 25rpx 0;
}

.card-title {
  color: #3c79fe;
  margin-bottom: 20rpx;
  font-weight: 200;
  font-size: 14px;
}

.card-content {
  color: #333;
  margin-bottom: 20rpx;
}

.card-time .time {
  margin-right: 15rpx;
}

.card-images {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
}

.card-time {
  font-size: 12px;
  color: #868484;
  margin-bottom: 20rpx;
  font-weight: 200;
}