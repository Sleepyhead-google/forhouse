.content-wrapper {
  margin: 30rpx;
}

.top-wrapper {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #f2f3f8;
  flex-direction: row;
  flex-wrap: nowrap;
}

.page-logo {
  flex: 0 0 100rpx;
  height: 100rpx;
  margin-right: 5rpx;
  box-sizing: border-box;
}

.page-middle {
  flex:1 1 auto;
  display: flex;
  flex-direction: column;
}

.page-middle-top{
  font-size:16px;
  color:#474749;
  margin-bottom: 10rpx;
}
.page-middle-down{
  font-size:12px;
  font-weight: 200;
  color:#cacacc;
}
.page-right {
  flex: 0 0 100rpx;
  padding: 6rpx 15rpx;
  text-align: center;
  color: white;
  background-color: #3c77f6;
  height: 50rpx;
  border-radius: 10rpx;

}